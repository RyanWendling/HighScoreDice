<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ryanwendling.highscoredice.MainActivity"
    android:background="@drawable/bg2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to, "
        android:textSize="40dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highscore Dice!"
        android:textSize="45sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:gravity="center"
        android:textColor="#000000"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLICK TO PLAY!"
        android:id="@+id/playButton"
        android:textColor="#000000"
        android:textSize="20dp"
        android:typeface="serif"
        android:gravity="center"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="#70FF0000"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The rules are simple:
        Make a guess as to what the next dice roll will be, keep rolling until you guess incorrectly. Guess that the die will be an even/ odd number and be awarded 300 points. Guess a specific number and be awarded 600 points. Try to get the high score!"
        android:id="@+id/textView2"
        android:background="#b1b1b1"
        android:typeface="serif"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"/>
</RelativeLayout>
